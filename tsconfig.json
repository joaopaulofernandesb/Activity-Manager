{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "api/**/*.ts",
      "config/**/*.ts",
      "model/**/*.ts",
      "types/**/*.d.ts"  // Certifique-se de incluir o diret√≥rio types
    ],
    "exclude": ["node_modules"]
  }
  